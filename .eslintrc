{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "es6": true,
    "jest": true,
    "webextensions": true
  },
  "rules": {
    "semi": ["error", "never"],
    "class-methods-use-this": 0,
    "react/state-in-constructor": 0,
    "react/jsx-filename-extension": [1, { "extensions": [".js"] }]
  }
}
